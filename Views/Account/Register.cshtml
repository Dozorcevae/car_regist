@model CarManagment.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 flex justify-center items-start min-h-[60vh]">
    <div class="glass-card max-w-md w-full p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl sm:text-3xl font-bold text-blue-600 mb-8">Регистрация</h2>
        <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>
            <div class="mb-6">
                <label asp-for="FirstName" class="block text-gray-700 font-medium mb-2">Имя</label>
                <input asp-for="FirstName" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="LastName" class="block text-gray-700 font-medium mb-2">Фамилия</label>
                <input asp-for="LastName" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Электронный адрес</label>
                <input asp-for="Email" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-gray-700 font-medium mb-2">Пароль</label>
                <input asp-for="Password" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-2">Подтверждение пароля</label>
                <input asp-for="ConfirmPassword" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>
            <div class="flex flex-col gap-2">
                <button type="submit" class="btn-blue font-medium px-6 py-3 text-base">Зарегистрироваться</button>
                <p class="text-center text-gray-500 text-sm">
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="hover:underline">Уже есть аккаунт? Войти</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 