@model CarManagment.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 flex justify-center items-start min-h-[60vh]">
    <div class="glass-card max-w-md w-full p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl sm:text-3xl font-bold text-blue-600 mb-8">Вход</h2>
        <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>
            <div class="mb-6">
                <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Электронный адрес</label>
                <input asp-for="Email" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-gray-700 font-medium mb-2">Пароль</label>
                <input asp-for="Password" class="form-input w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-6 flex items-center">
                <input asp-for="RememberMe" class="accent-blue-600 mr-2" />
                <label asp-for="RememberMe" class="text-gray-700 select-none cursor-pointer">Запомнить меня</label>
            </div>
            <div class="flex flex-col gap-2">
                <button type="submit" class="btn-blue font-medium px-6 py-3 text-base">Войти</button>
                <p class="text-center text-gray-500 text-sm">
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="hover:underline">Зарегистрироваться как новый пользователь</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 