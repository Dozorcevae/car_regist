@model CarManagment.Models.ViewModels.ProfileModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 flex justify-center items-start min-h-[60vh]">
    <div class="glass-card max-w-xl w-full p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl sm:text-3xl font-bold text-blue-600 mb-8">Профиль пользователя</h2>
        <div class="space-y-5">
            <div class="flex justify-between items-center border-b pb-3">
                <span class="text-gray-500 font-medium">Имя:</span>
                <span class="text-gray-900 font-semibold">@Model.FirstName</span>
            </div>
            <div class="flex justify-between items-center border-b pb-3">
                <span class="text-gray-500 font-medium">Фамилия:</span>
                <span class="text-gray-900 font-semibold">@Model.LastName</span>
            </div>
            <div class="flex justify-between items-center border-b pb-3">
                <span class="text-gray-500 font-medium">Email:</span>
                <span class="text-gray-900 font-semibold">@Model.email</span>
            </div>
            <div class="flex justify-between items-center border-b pb-3">
                <span class="text-gray-500 font-medium">Дата регистрации:</span>
                <span class="text-gray-900 font-semibold">@Model.RegTime.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-gray-500 font-medium">Количество автомобилей:</span>
                <span class="text-blue-600 font-bold">@Model.TotalCars</span>
            </div>
        </div>
    </div>
</div> 