@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="flex items-center space-x-4">
        <a href="/Account/Profile" class="text-blue-600 hover:underline">@User.Identity.Name</a>
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <button type="submit" class="btn-logout text-sm">
                Выйти
            </button>
        </form>
    </div>
}
else
{
    <div class="flex items-center space-x-4">
        <a href="/Account/Login" class="btn-login text-sm">
            Войти
        </a>
        <a href="/Account/Register" class="glass-effect text-gray-700 hover:text-gray-900 px-4 py-2 rounded-lg text-sm font-medium">
            Регистрация
        </a>
    </div>
} 