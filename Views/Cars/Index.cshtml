@model IEnumerable<CarManagment.Models.Vehicle>

@{
    ViewData["Title"] = "Мои транспортные средства";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl sm:text-4xl font-bold text-blue-600">
            Мои транспортные средства
        </h1>
        <a href="/Cars/Create" class="btn-blue font-medium px-6 py-3 text-base">
            <i class="fas fa-plus mr-2"></i> Добавить транспортное средство
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center">
            <p class="mb-4 text-lg text-blue-500">У вас пока нет добавленных транспортных средств.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="cars-table">
                <thead>
                    <tr>
                        <th>Марка</th>
                        <th>Модель</th>
                        <th>Год</th>
                        <th>Гос. номер</th>
                        <th>VIN</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Year</td>
                            <td>@item.LicensePlate</td>
                            <td>@item.VIN</td>
                            <td>
                                <a href="/Cars/Details/@item.Id" class="btn-action-blue">
                                    <i class="fas fa-info-circle mr-1"></i> Подробнее
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            gsap.from(".glass-card", {
                scale: 0.9,
                opacity: 0,
                duration: 1,
                ease: "power2.out"
            });
        });
    </script>
}